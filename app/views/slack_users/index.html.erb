<p id="notice"><%= notice %></p>

<h1>Listing Slack Users</h1>

<table>
  <thead>
    <tr>
      <th>Slack team</th>
      <th>Slack user</th>
      <th>Name</th>
      <th>Email</th>
      <th>Color</th>
      <th>Deleted</th>
      <th>Profile</th>
      <th>Is admin</th>
      <th>Is owner</th>
      <th>Is primary owner</th>
      <th>Slack code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slack_users.each do |slack_user| %>
      <tr>
        <td><%= slack_user.slack_team %></td>
        <td><%= slack_user.slack_user_id %></td>
        <td><%= slack_user.name %></td>
        <td><%= slack_user.email %></td>
        <td><%= slack_user.color %></td>
        <td><%= slack_user.deleted %></td>
        <td><%= slack_user.profile %></td>
        <td><%= slack_user.is_admin %></td>
        <td><%= slack_user.is_owner %></td>
        <td><%= slack_user.is_primary_owner %></td>
        <td><%= slack_user.slack_code %></td>
        <td><%= link_to 'Show', slack_user %></td>
        <td><%= link_to 'Edit', edit_slack_user_path(slack_user) %></td>
        <td><%= link_to 'Destroy', slack_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

