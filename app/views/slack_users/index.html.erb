

<h1 class="page-header">Listing Slack Users</h1>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_users, renderer: BootstrapPagination::Rails  %>
		</div>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Slack team</th>
      <th>Slack user</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slack_users.each do |slack_user| %>
      <tr>
        <td><%= slack_user.slack_team %></td>
        <td><%= slack_user.slack_user_id %></td>
        <td><%= slack_user.name %></td>
        <td><%= link_to 'Show', slack_user %></td>
        <td><%= link_to 'Edit', edit_slack_user_path(slack_user) %></td>
        <td><%= link_to 'Destroy', slack_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_users, renderer: BootstrapPagination::Rails  %>
		</div>
	</div>

<br>
