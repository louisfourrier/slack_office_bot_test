<p id="notice"><%= notice %></p>

<h1 class="page-header">Listing Slack Tasks</h1>


<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_tasks, renderer: BootstrapPagination::Rails  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Slack team</th>
      <th>Slack user</th>
      <th>Slack channel</th>
      <th>Task description</th>
      <th>Response url</th>
      <th>Is done</th>
      <th>User creator</th>
      <th>User assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slack_tasks.each do |slack_task| %>
      <tr>
        <td><%= slack_task.slack_team %></td>
        <td><%= slack_task.slack_user %></td>
        <td><%= slack_task.slack_channel %></td>
        <td><%= slack_task.task_description %></td>
        <td><%= slack_task.response_url %></td>
        <td><%= slack_task.is_done %></td>
        <td><%= slack_task.user_creator %></td>
        <td><%= slack_task.user_assigned %></td>
        <td><%= link_to 'Show', slack_task %></td>
        <td><%= link_to 'Edit', edit_slack_task_path(slack_task) %></td>
        <td><%= link_to 'Destroy', slack_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_tasks, renderer: BootstrapPagination::Rails  %>
		</div>
</div>

<br>

<%= link_to 'New Slack task', new_slack_task_path %>
