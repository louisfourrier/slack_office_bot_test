

<h1 class="page-header">Listing Slack Teams</h1>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_teams, renderer: BootstrapPagination::Rails  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Slack team</th>
      <th>Team domain</th>
      <th>Company name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slack_teams.each do |slack_team| %>
      <tr>
        <td><%= slack_team.slack_team_id %></td>
        <td><%= slack_team.team_domain %></td>
        <td><%= slack_team.company_name %></td>
        <td><%= link_to 'Show', slack_team %></td>
        <td><%= link_to 'Edit', edit_slack_team_path(slack_team) %></td>
        <td><%= link_to 'Destroy', slack_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate @slack_teams, renderer: BootstrapPagination::Rails  %>
		</div>
</div>

<br>
